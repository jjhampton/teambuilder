<nav class="primary-nav">
  {{#if session.isAuthenticated}}
    <span class="nav-buttons-container">
      {{#link-to 'index'}}
        <button class="nav-button-home">Home</button>
      {{/link-to}}
      {{#link-to 'users.show' session.currentUser}}
        <button class="nav-button-profile">{{session.currentUser.name}}'s Profile</button>
        {{gravatar-small email=session.currentUser.email size="40"}}
      {{/link-to}}
    </span>
    <span class="nav-container-logout">
      {{#link-to 'index'}}
      <button class="nav-button-logout" {{action 'invalidateSession'}}>Logout</button>
      {{/link-to}}
    </span>
  {{else}}
    {{sessions-create}}
  {{/if}}
</nav>
<div class="outer-container">
{{outlet}}
</div>
