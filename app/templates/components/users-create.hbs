<h1 class="primary-heading">Sign up today to begin helping others solve problems.</h1>
<form class="users-create-form">
  <fieldset class="users-create-fieldset users-create-fieldset-required">
    <legend><b>Account Information</b></legend>

    {{input class="users-create-info"  type="text" placeholder="Full name (required)" value=model.name}}

    {{input class="users-create-info" type="email" placeholder="Email address (required)" value=model.username}}

    {{input class="users-create-info users-create-password" type="password" placeholder="Password (required)" value=model.password}}
  </fieldset>

  <fieldset class="users-create-fieldset users-create-fieldset-optional">
    <legend><b>Optional Information</b></legend>

    {{input class="users-create-optional" type="text" placeholder="Occupation" value=model.occupation}}

    {{input class="users-create-info" type="number" placeholder="Age" value=model.age}}

    <legend><b>Interests</b></legend>
    <input class="users-create-optional" type="text" placeholder="Any personal interest of yours" name="interest" required=true title='Please enter an interest.'>
    <input class="users-create-optional" type="text" placeholder="Any personal interest of yours" name="interest" required=true title='Please enter an interest.'>
    <input class="users-create-optional" type="text" placeholder="Any personal interest of yours" name="interest" required=true title='Please enter an interest.'>
    <button class="users-create-button-addinterest" {{action 'addInterestInput'}}>+ Add another interest</button>
  </fieldset>

  <fieldset class="users-create-fieldset">
    <legend><b>Location</b></legend>
    <p class="users-create-location-text">Use this location or search the map to set another.</p>
    {{leaflet-userscreate model=model}}
  </fieldset>

  <button class="users-create-button-submit" {{action 'createUser'}}>Sign Up!</button>

</form>

{{yield}}
