<h1 class="primary-heading">Add a problem that you need help solving.</h1>
<form class="problems-create-form"{{action 'createProblem' on='submit'}}>
  <fieldset class="problems-create-fieldset">
    <legend>Problem Information</legend>

    {{input class="problems-create-info" type="text" placeholder="Name of problem" value=model.name}}
    {{textarea class="problems-create-info" placeholder="Short description of the problem" value=model.description}}
    {{input class="problems-create-info" type="url" placeholder="Trello Project URL" value=model.trelloURL}}
  </fieldset>

  <fieldset class="problems-create-fieldset">
    <legend>Deadline for solving the problem</legend>
    {{pikaday-input class="problems-create-datepicker" placeholder="Enter date" type="date" value=model.deadline}}
  </fieldset>

  <fieldset class="problems-create-fieldset">
    <legend>Tags</legend>
    <input class="problems-create-tag" type="text" placeholder="Enter in a tag describing your problem" name="tag">
    <input class="problems-create-tag" type="text" placeholder="Enter in a tag describing your problem" name="tag">
    <input class="problems-create-tag" type="text" placeholder="Enter in a tag describing your problem" name="tag">
    <button class="problems-create-button-addtag"{{action 'addTagInput'}}>Add another tag</button>
  </fieldset>

  <fieldset class="problems-create-fieldset">
    <legend>Location</legend>

    {{input class="problems-create-location" type="text" placeholder="City" value=model.city}}

    {{input class="problems-create-location" type="text" placeholder="State/Province" value=model.state}}

    {{input class="problems-create-location" type="text" placeholder="Country" value=model.country}}

    <button class="problems-create-button-location">Use Current Location</button>
  </fieldset>

  {{leaflet-map}}

  <button class="problems-create-button-submit">You're finished filling out info.  Submit the Problem!</button>
</form>

{{yield}}
