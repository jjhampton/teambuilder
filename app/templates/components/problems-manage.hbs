<h1 class="primary-heading">Manage Your Problem</h1>
<h2>Problem Name:{{model.name}}</h2>
<h2>Team Members:</h2>
<ul class="problem-members-list">
{{#if model.member1}}
  <li class="problem-members-list-item">{{model.member1.name}}   <button {{action 'removeMember' model 'member1'}}>Remove</button></li>
{{/if}}
{{#if model.member2}}
  <li class="problem-members-list-item">{{model.member2.name}}   <button {{action 'removeMember' model 'member2'}}>Remove</button></li>
{{/if}}
{{#if model.member3}}
  <li class="problem-members-list-item">{{model.member3.name}}   <button {{action 'removeMember' model 'member3'}}>Remove</button></li>
{{/if}}
{{#if model.member4}}
  <li class="problem-members-list-item">{{model.member4.name}}   <button {{action 'removeMember' model 'member4'}}>Remove</button></li>
{{/if}}
{{#if model.member5}}
  <li class="problem-members-list-item">{{model.member5.name}}   <button {{action 'removeMember' model 'member5'}}>Remove</button></li>
{{/if}}
</ul>
<h2>Update solution progress:</h2>
<label>
  Update current completion percentage:
  {{input class="manage-input-progress" type="number" value=model.progress}}
  <button {{action 'updateProgress' model}}>Update!</button>
</label>
<label>
  Press if the problem solved and ready for team review:
  <button {{action 'markComplete' model}}>Problem solved!</button>
</label>
{{yield}}
